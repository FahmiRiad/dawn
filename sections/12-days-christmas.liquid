  // Function to update the slider position
  function updateSlider() {
    slider.style.transform = `translateX(${-scrollPosition * 25}%)`;
  }

  // Scroll to the next set of images
  function next() {
    if (scrollPosition < 8) { // Assuming you have 12 days and want to display 3.5 at a time
